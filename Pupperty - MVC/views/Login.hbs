<!DOCTYPE html>
<html>
<head>
	<link rel="stylesheet" type="text/css" href="../css/Login.css">
	<script src="https://code.jquery.com/jquery-3.4.1.min.js" type="text/javascript"></script>
	<script type="text/javascript">
		$(document).ready(function () {
			$('#submit').click(function () {
		        var email = $('#email').val();
		        var password = $('#password').val();

		        if(email == "" || password == "")
		            $('#error').text('Fill up all fields.');
		        else{
		            $('#error').text('');
		            $('#email').val('');
		            $('#password').val('');
		            
		            $.post('/loginCheck', {email: email, password: password}, function (result) {
		                if(result.email == email && result.password == password){
		                	$.post('/login', {email: email, password: password}, function (result) {
		                		window.open('HomePage', "_self");
		                	});
		                }
		                else{
		                	$('#error').text('Incorrect email or password. Try again');
		                }
		            });

		        }

		    });
		});
	</script>
	<title>Pupperty</title>
</head>
<body style = "background-image: url('../images/Login/login_background_v2.png');">
	<div class="login_box">
		<div class="column"><img src="images/Login/dog.png" id="logo">
			<ul id="sign">
				<a href="/" id="log_in">Log In</a> <span id="slash">/</span>
				<a href="/signup" id="sign_up">Sign Up</a>
			</ul>
			<form id="formbox" autocomplete="off" method="post">
				<img src="images/Login/email.png" class="icons">
				<input type="email" class="form_input" name="email" placeholder="Email" id="email"><br>
				<img src="images/Login/password.png" class="icons">
				<input type="password" class="form_input" name="password" placeholder="Password" id="password"><br>
				<p id="error"></p>
				<input type="button" name="login_button" value="Log In" id="submit">
			</form>
		</div>
	</div>
</body>
</html>